{
  "name": "hijos-de-luz-website",
  "version": "1.0.0",
  "description": "Website for U.E. Hijos de Luz",
  "main": "script.js",
  "scripts": {
   "build:css": "npm exec postcss -- style.css -o dist/style.min.css",
   "build:js": "npm exec terser -- script.js -o dist/script.min.js -c -m",
   "build:html": "npm exec cpx -- \"*.html\" dist",
   "build:assets": "npm exec cpx -- \"images/**/*\" \"dist/images\"",
   "build:css": "npm exec postcss -- src/assets/css/style.css -o dist/style.min.css",
   "build:js": "npm exec terser -- src/assets/js/script.js -o dist/script.min.js -c -m",
   "build:html": "npm exec cpx -- \"src/*.html\" dist",
   "build:assets": "npm exec cpx -- \"src/assets/images/**/*\" \"dist/images\"",
   "images": "node process-images.js",
   "build": "npm-run-all build:html build:css build:js images build:assets",
   "watch:css": "onchange \"style.css\" -- npm run build:css",
   "watch:js": "onchange \"script.js\" -- npm run build:js",
   "watch:html": "onchange \"*.html\" -- npm run build:html",
   "watch:css": "onchange \"src/assets/css/style.css\" -- npm run build:css",
   "watch:js": "onchange \"src/assets/js/script.js\" -- npm run build:js",
   "watch:html": "onchange \"src/*.html\" -- npm run build:html",
   "server": "npx live-server dist/",
   "dev": "npm run build && npm-run-all --parallel watch:* server"
 },

    "build:css": "npm exec postcss -- src/assets/css/style.css -o dist/style.min.css",
    "build:js": "npm exec terser -- src/assets/js/script.js -o dist/script.min.js -c -m",
    "build:html": "npm exec cpx -- \"src/*.html\" dist",
    "build:assets": "npm exec cpx -- \"src/assets/images/**/*\" \"dist/images\"",
    "images": "node process-images.js",
    "build": "npm-run-all build:html build:css build:js images build:assets",
    "watch:css": "onchange \"src/assets/css/style.css\" -- npm run build:css",
    "watch:js": "onchange \"src/assets/js/script.js\" -- npm run build:js",
    "watch:html": "onchange \"src/*.html\" -- npm run build:html",
    "server": "npx live-server dist/",
    "dev": "npm run build && npm-run-all --parallel watch:* server"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "cssnano": "^6.1.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.3",
    "terser": "^5.30.0"
  }
}
